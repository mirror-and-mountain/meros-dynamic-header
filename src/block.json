{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "meros/dynamic-header",
	"version": "0.1.0",
	"title": "Meros Dynamic Header",
	"category": "design",
	"icon": "format-image",
	"description": "",
	"textdomain": "meros-dynamic-header",
	"editorScript": "file:./index.js",
	"viewScript": "file:./view.js",
	"supports": {
		"layout": {
			"default": {
				"type": "constrained",
				"contentSize": "1300px",
				"wideSize": "1300px",
				"justifyContent": "center"
			},
			"allowEditing": true,
			"allowSwitching": false,
			"allowCustomContentAndWideSize": true
		},
		"spacing": {
			"margin": true,
			"padding": true
		},
		"color": {
			"gradients": true,
			"background": true,
			"text": true
		}
	},
	"attributes": {
		"isSticky": {
			"type": "boolean",
			"default": true
		},
		"bottomOffset": {
			"type": "boolean",
			"default": true
		},
		"isOverlay": {
			"type": "boolean",
			"default": false
		},
		"backgroundStartColor": {
			"type": "string",
			"default": "#FFFFFF00"
		},
		"backgroundEndColor": {
			"type": "string",
			"default": "#FFFFFF"
		},
		"textStartColor": {
			"type": "string",
			"default": "#000000"
		},
		"textEndColor": {
			"type": "string",
			"default": "#000000"
		},
        "style": {
            "type": "object",
            "default": {
                "spacing": {
                    "padding": {
                        "top": "var(--wp--preset--spacing--20)",
						"left": "var(--wp--preset--spacing--20)",
                        "bottom": "var(--wp--preset--spacing--20)",
						"right": "var(--wp--preset--spacing--20)"
                    }
                }
            }
        }
	}
}